.dashboard {
	&-view {
		background: #f5f5f5;
		padding: 15px;
		margin-bottom: 15px;
		&.active {
			display: block;
		}
		h2 {
		    color: #4c4c4c;
		    font-size: 1rem;
		    text-transform: uppercase;
		    margin-bottom: 15px;
		    font-weight: lighter;
		    border-bottom: 1px solid #cbcbcb;
		    padding-bottom: 5px;
		}
		.view-info {
			background: #fff;
			margin-bottom: 10px;
			padding: 5px 10px; 
			p {
				margin-bottom: 0;
			}
			.title {
			    font-weight: 600;
			    color: #6a6a6a;
			    display: block;
			    margin-bottom: 5px;
			    text-transform: uppercase;
			    font-size: 14px;
			}
		}
	}
	&-menu {
		a.active {
		    background: #f5f5f5;
		    padding: 5px;
		    color: #5e5e5e;
		    font-weight: bold;
		}
		li {
			width: 100%;
		}
		a {
			display: block;
			margin-bottom: 5px;
		}
	}

	@media (min-width: sm) {
		&-content {
			display: flex;
		} 
		&-menu {
			  
			li {  
				padding: 5px 10px 5px 0;
			}
			a {
				display: block;
			}
		}
		&-view {
			
		}
	}
}

.view-info.mg-bottom.model-group {
    background: none;
    padding: 0;
    margin-bottom: 30px;
}

.model-list {
	.model-item {
	    margin-bottom: 20px;
	    background: #ffffff;
	    padding: 7px 10px 13px 10px;
	}
	@media (min-width: sm) {
		& {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			.model-item {
			    width: 48%;
			    padding: 7px 10px;
			}
		}
	}
}

.step {
	display: none;
	&.active {
		display: block;
	}
}