
* {
	margin 0;
	padding 0
	box-sizing: border-box;
	font-style: normal;
	text-decoration: none;
	outline: none;
	list-style-type: none;
	font-synthesis: none;
  	text-rendering: optimizeLegibility;
  	-webkit-font-smoothing: antialiased;
  	-moz-osx-font-smoothing: grayscale;
  	font-family: 'Montserrat',sans-serif;
  
}


html, body {
	height: 100%;
	font-size: font_size;
}

img {
	max-width: 100%;
	width: auto;
	height: auto;
}

.auto-h {
	height: 100vh
	.container {
		height: 100%;
		display: flex;
		z-index: 10;
	    flex-direction: row;
	    justify-content: space-around;
	    align-items: center;
	}
	.title_page {
		position: absolute;
	    top: 45%;
	    right: 0;
	    left: 0;
	}
	.down {
	    width: 45px;
	    position: absolute;
	    bottom: 0;
	    background: #fff;
	    color: #333;
	    border-radius: 25px 25px 0 0;
	    height: 25px;
	    font-size: 25px;
	    &.no-bg {
	    	background: none;
	    	color: #fff;
	    	height: 40px;
	    	width: auto;
	    }
	    &.animate {
	    	animation: down 0.8s ease alternate infinite;
	    }
	}
}

.container	{
	max-width: container;
	padding 0 15px;
	margin 0 auto
	 
	position relative
}

