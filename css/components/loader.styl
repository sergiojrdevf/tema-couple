@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes scale {
    0% {
        transform: scale(0.8);
    }

    100% {
        transform: scale(1.5);
    }
}

@keyframes size {
    0% {
        width: 6px;
    }

    100% {
        width: 10px;
    }
}

@keyframes bars_size {
    0% {
        height: 5px;
    }
    100% {
        height: 20px;
    }
}