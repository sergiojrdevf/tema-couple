.search {
	p, h2 {
		margin-bottom: 0;
	}
	&-item {
	    margin-bottom: 20px;
	    padding: 15px;
	    border-radius: 4px; 
	    border: 1px solid #d0d0d0;
	}
	&-content {
		margin-bottom: 10px;
		p {
			font-size: 14px;
		}
	}
	&-found {
		p {
			font-size: 12px;
			color: color_theme;
		}
	}
	&-title {
	    margin-bottom: 10px;
	    h2 {
		    font-weight: 500;
		    font-size: 20px;
	    }
	}

	&-form {
		position: relative;
		.submit {
		    width: 40px;
		    height: 41px;
		    position: absolute;
		    top: 0;
		    right: 0;
		    background: #c5c5c5;
		    border: 0;
		    border-radius: 0 2px 2px 0;
		    .fa {
		    	color: #fff;
		    }
		}
	}
}