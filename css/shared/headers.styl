.apresentation {
	bg-image(cover, center, '../../img/couple.jpg');
	position: relative;
	.names {
    	font-size: 40px;
    	color: #fff;
	}
	.date {
		margin-top: 10px;
		color: #fff;
		display: block;
		font-size: 12px;

	}
	.lines {
		margin: 20px 0 40px 0;
		&:after {
			pseudoElemnt(relative, 60%, 3px);
			background: #fff;
			margin: auto;
			top: 20px;
		}

		&:before {
			pseudoElemnt(relative, 100%, 3px);
			background: #fff;
			margin: auto;
			top: -20px;
		}
	}

	.top-title {
		font-size: 18px;
	}

	&:nth-child(2) {
		bg-image(cover, center, '../../img/coupleI.jpg');
	}

	&:nth-child(3) {
		bg-image(cover, center, '../../img/coupleII.jpg');
	}

	&:nth-child(4) {
		bg-image(cover, center, '../../img/coupleIIII.jpg');
	}

	&:nth-child(5) {
		bg-image(cover, center, '../../img/coupleIIII.jpg');
	}

	header {
		position: absolute;
		width: 100%;
		z-index: 11;
		.container {
			justify-content: space-between;
		}
	}

}

.rotate {
	transform: rotateZ(-10deg);
}


.overlay {
	position: relative;
	&:after {
		pseudoElemnt(absolute, 100%, 100%);
		background: rgba(27, 27, 27, 0.46);
	}
	& > * {
		z-index: 99;
	}
}

@media (max-width: xs) {
	.apresentation {
		.break {
			display: block;
		}
	}
}

@media (min-width: sm) {
