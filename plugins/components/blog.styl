.blog {
	.section-title {
		color: #333;
		margin-bottom: 30px;
	}
	&.bg-overlay {
		.blog_item {
			height: 230px;
			position: relative;
			margin-bottom: 20px;
			padding: 15px;
			margin-bottom: 20px;
		    display: flex;
		    align-items: flex-end;
			h2 {
			    color: #fff;
			    font-weight: normal;
			    font-size: 20px;
			}
			.fa {
				color: #fff;
			}
		}
	}
	&.blog-default {
		.blog_item {
			text-align: center;
			margin-bottom: 30px;
		}
		.blog_img {
			height: 160px;
		}
		.blog_content-title {
		    text-align: center;
		    font-size: 20px;
		    color: #333;
		    text-transform: capitalize;
		    margin: 10px 0;
		    display: inline-block;
		    border-bottom: 1px solid #ededed;
		    padding: 0 10px 5px 10px;
		}
		.blog_content-p {
			font-size: 16px;
			text-align: left;
			a {
				color: #0089ee;
				font-size: 10px;
				display: block;
				margin-top: 15px;
				font-weight: 400;
				text-transform: uppercase;
			}
		}
	}
} 
