.apresentation {
	bg-image(cover, center, '../../img/couple.jpg');
	position: relative;
	height: 600px !important;
	.names {
    	font-size: 40px;
    	color: #fff;
	}
	.date {
		margin-top: 10px;
		color: #fff;
		display: block;
		font-size: 12px;

	}
	.lines {
		margin: 20px 0 40px 0;
		&:after {
			pseudoElemnt(relative, 60%, 3px);
			background: #fff;
			margin: auto;
			top: 20px;
		}

		&:before {
			pseudoElemnt(relative, 100%, 3px);
			background: #fff;
			margin: auto;
			top: -20px;
		}
	}

	.top-title {
		font-size: 18px;
	}

	&.bg-number-2 {
		bg-image(cover, center, '../../img/pre-weding6.jpg');
	}

	&.bg-number-3 {
		bg-image(cover, center, '../../img/pre-weding1.jpg');
	}

	&.bg-number-4 {
		bg-image(cover, center, '../../img/pre-weding5.jpg');
	}

	&.bg-number-5 {
		bg-image(cover, center, '../../img/coupleIIII.jpg');
	}

	header {
		position: absolute;
		width: 100%;
		z-index: 11;
		.container {
			justify-content: space-between;
		}
	}
	.descr {
		padding: 80px 0; 
	}

}

.rotate {
	transform: rotateZ(-10deg);
}

@media (max-width: xs) {
	.apresentation {
		.break {
			display: block;
		}
	}
}

@media (min-width: sm) {
	.apresentation {
		.names {
			font-size: 60px;
		}
